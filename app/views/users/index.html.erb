<h1 align="center">All Users</h1>
<div class="col-sm-8 text-right center">
  <p><%= link_to "Add New User", signup_path %></p>
<div>
<div class="d-flex flex-wrap justify-content-center col-sm-10 offset-4 mt-4">
  <% @users.each do |user| %>
    <a href="<%= user_path(user) %>">
      <div class="card text-center mt-3 mr-3">

        <div class="card-title">
          <%= user.username %>
        </div>
        <div class="card-body">
          <%= gravatar_for(user) %>
        </div>
        <div class="card-footer">
        <small><%= pluralize(user.articles.count, "article") if user.articles%></small>
        </div>    

      </div>
    </a>
  <% end %>
</div>