<%= render 'shared/errors', obj: @user %>

<div class="row mt-3">
  <div class="col-md-10 offset-2">
  
    <%= form_for(@user, :html => {role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="col-sm-10 mb-2">
          <%= f.text_field :username, class: "form-control", id: "username", placeholder: "Username", autofocus: true %>
        </div>
        
        <div class="col-sm-10 mb-2">
          <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Email" %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Password" %>
        </div>
      </div>  
      <div class="form-group row">
        <div class="col-sm-10 d-flex justify-content-between">
          <%= link_to "Back to Users List", users_path %>
          <%= f.submit(@user.new_record? ? "Sign up" : "Update User", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>
  </div>
</div>