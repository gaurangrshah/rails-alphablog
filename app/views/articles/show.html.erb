  <div class="card text-center col-sm-8 offset-2 mt-4">
    
    <div class="card-header">
      <div class="card-title">
        <%= @article.id %>
        <h3><%= @article.title%></h3>
      </div>
    </div>  

    <% if @article.user %>
      <div class="card-body">
        <a href="<%= user_path(@article.user) %>">
          <div class="card text-center mt-3 mr-3">

            <div class="card-title">
              <%= @article.user.username %>
            </div>
            <div class="card-body">
              <%= gravatar_for(@article.user) %>
            </div>
            <div class="card-footer">
            <small><%= pluralize(@article.user.articles.count, "article") %></small>
            </div>    

          </div>
        </a>
        <%= simple_format(@article.description) %>
      </div>
    <% end %>
    <div class="card-footer d-flex justify-content-between align-items-end">
      <div class="article-author text-left">
        <small>Author: <%= @article.user.username if @article.user%> <br/></small>
        <smalL>Published: <%= time_ago_in_words(@article.created_at) %> ago</small> <br/>
        <smalL>Last Updated: <%= time_ago_in_words(@article.updated_at) %> ago</small> <br/>
      </div>
      <div class="article-actions">
        <%= link_to "✏️", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
        <%= link_to "❌", article_path(@article), method: :delete, 
                                          data: { confirm: "Are you sure you want to delete the article?"}, 
                                          class: "btn btn-xs btn-danger" %>  
        <%= link_to "🔍", articles_path, class: "btn btn-xs btn-success" %>   
      </div>
    </div>   
  </div>
