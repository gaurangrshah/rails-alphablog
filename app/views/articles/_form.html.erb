<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-md-12">
  
    <%= form_for(@article, :html => {role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="col-sm-10 mb-2">
          <%= f.text_field :title, class: "form-control", id: "title", placeholder: "Title", autofocus: true %>
        </div>
        
        <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control", id: "description", placeholder: "Description", rows: 10 %>
        </div>
      </div>  
      
      <div class="form-group row">
        <div class="col-sm-10 d-flex justify-content-between">
          <%= link_to "Back to Articles List", articles_path %>
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
